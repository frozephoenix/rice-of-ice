// -*- mode: jsonc -*-
{
  "layer": "top",
  "height": 30, // Waybar height (to be removed for auto height)
  // "width": 1280, // Waybar width
  "spacing": 4, // Gaps between modules (4px)
  "reload_style_on_change": true,
  "modules-left": [
    "custom/appmenu",
    "clock",
    "power-profiles-daemon",
    "custom/weather",
    "privacy",
  ],
  "modules-center": ["custom/power", "hyprland/workspaces", "custom/noti"],
  "modules-right": [
    "mpris",
    "pulseaudio",
    "network",
    "tray",
    "battery",
  ],

  "custom/appmenu": {
    "format": "ïŒƒ",
