    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true,
  },

  "custom/weather": {
    "exec": "$HOME/.config/waybar/hyprland/scripts/get_weather.sh Chennai+India",
    "return-type": "json",
    "format": "{text}",
    "interval": 3600,
  },
}
